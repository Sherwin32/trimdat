<div class="container">
  <header>
    <div class="logo">
      <a href="/">
        <img src="<%=image_path("logo.png")%>" alt="">
      </a>
      <h2>Trimdat</h2>
    </div>
    <div class="signin">

      <div class="btn"><%= link_to "About", about_path, :class => "btn btn-info btn-lg btn3d" %></div>
      <button class="btn btn-info btn-lg btn3d" type="button" name="signin" data-toggle="modal" data-target="#myModalSignIn">Sign In</button>
      <button class="btn btn-info btn-lg btn3d" type="button" name="signup" data-toggle="modal" data-target="#myModalSignUp">Sign Up</button>
      <!-- <%= button_to("About", about_path, method: :get, :class => "btn btn_info btn-lg btn3d") %> -->
    </div>

    <div class="fix">
    </div>

  </header>
  <div class="welcomeImage">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">

        <div class="item active">
          <img src="<%=image_path("welcome.jpg")%>" style="width:100%; height: 500px;">
          <div class="carousel-caption">
          </div>
        </div>

        <div class="item">
          <img src="<%=image_path("welcome2.jpg")%>" style="width:100%; height: 500px;">
          <div class="carousel-caption">
          </div>
        </div>

        <div class="item">
          <img src="<%=image_path("welcome3.jpeg")%>" style="width:100%; height: 500px;">
          <div class="carousel-caption">
          </div>
        </div>

      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <div class="topics">

    <div class="title">
      <h1>Trimdat</h1>
    </div>

    <div class="topic topic1">
      <h2>The Easiest Way to Format your CSV</h2>
      <p>Choose from our array of options: de-duplification, sorting, deleting empty cells, view word count, etc</p>

    </div>

    <div class="topic topic2">
      <h2>Send Formatted Data to Colleagues</h2>
      <p>Quickly email your beautified CVS to anyone registered on our website</p>

    </div>

    <div class="topic topic3">
      <h2>Save CSV in Different Formats</h2>
      <p>Turn your CSV into a TXT, PDF, or Excel file instantly</p>

    </div>

  </div>

  <div class="footer">
    <h2>This is footer</h2>
  </div>

</div>

<!-- Modal for sign in -->
<div class="modal fade" id="myModalSignIn" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
    <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close"
                       data-dismiss="modal">
                           <span aria-hidden="true">&times;</span>
                           <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        Sign In
                    </h4>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <%= form_for @user, url: login_path, method: "post" do |f| %>
                    <div>
                      <%= f.text_field :user_name, placeholder: "Username" %>
                    </div>
                    <div>
                      <%= f.password_field :password, placeholder: "Password" %>
                    </div>
                    <%= f.submit "Log In"%>
                    <%end%>

                    <!-- <form role="form">
                      <div class="form-group">
                        <label for="inputUsername">Username</label>
