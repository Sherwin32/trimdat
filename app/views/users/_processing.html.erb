<div class="contentBox">

<% @documents.reverse_each do |d| %>
  <% if d.content_status != "Done" && d.content_status != "Pending" %>
  <div class="content">
    <div class="fileContainer">
      <div class="file">
        <!-- <img src='<%=image_path("file.png")%>' alt="file"> -->
        <%= link_to image_tag("file.png", border: 0), url_for(action: 'show', controller: 'documents', id: "#{d.id}") %>
      </div>
      <div class="allFileName pendingFile">
        <%= d.name %>
      </div>


    </div>
    <div class="progress">
      <div class="progress-bar progress-bar-striped progress-bar-success active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 30%">
        <span>Pending</span>
      </div>
    </div>
    <%= link_to document_destroy_path(d, :id => d.id), controller: 'documents', action: 'destroy', method: :delete do %>
    <i class="glyphicon glyphicon-trash toolBtn spTrash"></i>
    <% end %>
  </div>
<% end %>
<% end %>

    </div>
