<!-- Modal for sign up -->
      <div class="modal fade" id="myModalShareFile" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
          <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                   data-dismiss="modal">
                       <span aria-hidden="true">&times;</span>
                       <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">
                    Share this document to your friend:
                </h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <%= form_with scope: :document, id: document.id, url: share_doc_path, method: "post" do |f| %>
                <div>
                  <%= f.text_field :user_name, placeholder: "Username" %>
                </div>
                <%= f.submit "Add", :class => "btn btn-default"%>
                <%end%>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                            Close
                </button>
            </div>
          </div>
        </div>
      </div>